{
  "name": "fetch-salesforce",
  "version": "1.0.1-beta.14",
  "description": "A client for Salesforce using React Native friendly Fetch requests.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "author": "David Helmer",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "chai": "4.1.0",
    "events": "^1.1.1",
    "isomorphic-fetch": "^2.2.1",
    "numeral": "^1.5.3",
    "querystring": "^0.2.0",
    "url-join": "^1.1.0"
  },
  "devDependencies": {
    "@types/chai": "4.0.2",
    "@types/jest": "^19.2.3",
    "@types/mocha": "2.2.41",
    "@types/node": "6.0.46",
    "@types/sinon": "^1.16.31",
    "fetch-mock": "^5.5.0",
    "jest": "20.0.4",
    "sinon": "2.1.0",
    "ts-jest": "^20.0.4",
    "typescript": "^2.1.4",
    "typings": "^2.1.0"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
